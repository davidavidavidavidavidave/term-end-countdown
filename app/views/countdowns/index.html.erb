                <h2><%= button_to "Delete this countdown", countdown, method: :delete, class: "button-style"  %></h2>
            </h2>
          </div>
        <div class="countdown-container small-countdown">
          <%= link_to countdown do %>
    <%= render partial: "countdowns/countdown_mini", locals: { countdown: countdown } %>
  <% end %> 
</div>
</div>
 </div>
    </div>
    <br>
  <% end %>
   <br>
   <div>
    <%= link_to "New countdown", new_countdown_path, class: "new-style" %>
  </div>
</div>
