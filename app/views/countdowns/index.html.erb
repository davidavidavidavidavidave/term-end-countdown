<p style="color: green"><%= notice %></p>

<div class="container">
  <h1>Countdowns</h1>

  <br>
  <% @countdowns.each_with_index do |countdown, index| %>
    <div id="countdowns">
      <div class="card-trip">
        <div class="card-trip-infos">
          <div>
            <h2>Countdown <%= index + 1 %>:&nbsp; <strong><%= countdown.name %></strong></h2>
