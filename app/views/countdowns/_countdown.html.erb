<div id="<%= dom_id countdown %>">

  <h1><strong>Countdown</strong></h1>

  <h2><%= countdown.name %>:
    <% if countdown.target.present? %>
      <%= countdown.target.strftime("%A %d %B %Y at %H:%M") %>
    <% else %>
      No end date specified
    <% end %>
</h2>
  <% seconds_until_target_time = countdown.target.to_i - Time.now.to_i %>

  <%= content_tag(:h1, "", data: {
    controller: "countdown",
    countdown_target: "countdown",
    seconds_until_end_value: seconds_until_target_time
  }) %>

</div>
